{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".svelte-kit/**",
        "functions/**",
        ".vercel",
        ".astro"
      ],
      "env": ["APP_ENV", "API_TOKEN", "ALGOLIA_ADMIN_KEY", "SANITY_TOKEN"]
    },
    "dev": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "test:e2e": {},

    "deploy": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": ["APP_ENV", "API_TOKEN", "ALGOLIA_ADMIN_KEY", "SANITY_TOKEN"]
    }
  }
}
