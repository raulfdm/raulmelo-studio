{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "npmrcMerge": true,
  "requireConfig": "optional",
  "username": "renovate-release",
  "platform": "github",
  "repositories": ["raulfdm/raulmelo-studio"],
  "baseBranches": ["main"],
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "pruneStaleBranches": true,
  "packageRules": [
    {
      "matchPackageNames": ["ansi-regex", "glob-parent"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@types/node", "node"],
      "allowedVersions": "<21"
    },
    {
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "React"
    },
    {
      "matchPackageNames": [
        "@astrojs/*",
        "astro",
        "prettier-plugin-astro",
        "eslint-plugin-astro"
      ],
      "groupName": "Astro"
    },
    {
      "matchPackageNames": [
        "eslint",

        "@typescript-eslint/*",
        "@types/eslint__js",
        "@types/eslint"
      ],
      "groupName": "ESlint"
    },
    {
      "matchPackageNames": ["@fontsource/*"],
      "groupName": "Fountsource (website)"
    },
    {
      "matchPackageNames": ["xstate", "@xstate/*"],
      "groupName": "XState"
    },
    {
      "matchPackageNames": ["svelte", "@sveltejs/*"],
      "groupName": "Svelte"
    },
    {
      "matchPackageNames": ["@tabler/*"],
      "groupName": "Tabler Icons"
    },
    {
      "matchPackageNames": ["sanity", "groq", "@sanity/*"],
      "groupName": "Sanity"
    },
    {
      "matchPackageNames": ["vite", "vitest", "vite-plugin-*"],
      "groupName": "Vite"
    },
    {
      "matchPackageNames": ["algoliasearch", "react-instantsearch*"],
      "groupName": "Algolia"
    },
    {
      "groupName": "Tailwind ecosystem",

      "matchPackageNames": [
        "postcss",
        "autoprefixer",
        "tailwindcss",
        "@tailwindcss/*"
      ]
    },
    {
      "matchPackageNames": ["daisyui"],
      "allowedVersions": "<3"
    },
    {
      "groupName": "Lodash",
      "matchPackageNames": ["lodash", "lodash*", "lodash-es", "@types/lodash"]
    }
  ]
}
