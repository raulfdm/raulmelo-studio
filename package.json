{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check": "turbo run check",
    "deploy": "turbo run deploy",
    "test": "turbo run test",
    "clean": "bun x rimraf node_modules **/node_modules",
    "clean:deep": "bun x rimraf node_modules **/node_modules **/.svelte-kit **/.turbo **/dist **/.vercel"
  },
  "devDependencies": {
    "@raulmelo/eslint-config": "workspace:*",
    "eslint": "8.51.0",
    "husky": "8.0.3",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "turbo": "1.10.15",
    "typescript": "5.2.2"
  }
}
