{
  "name": "raulmelo.me",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "website",
    "website-new",
    "cms"
  ],
  "catalog": {
    "typescript": "5.9.2"
  },
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "deploy": "turbo run deploy",
    "test": "turbo run test",
    "clean": "rm -rf node_modules **/node_modules",
    "clean:deep": "rm -rf node_modules **/node_modules **/.svelte-kit **/.turbo **/dist **/.vercel"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "turbo": "2.4.4",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.2.10"
}
