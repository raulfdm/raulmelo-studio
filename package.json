{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check": "turbo run check",
    "deploy": "turbo run deploy",
    "test": "turbo run test",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "clean:deep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules .svelte-kit .turbo dist .vercel"
  },
  "devDependencies": {
    "@raulmelo/eslint-config": "workspace:*",
    "eslint": "8.45.0",
    "husky": "8.0.3",
    "prettier": "3.0.3",
    "rimraf": "5.0.1",
    "turbo": "1.10.13",
    "typescript": "5.2.2"
  },
  "pnpm": {
    "overrides": {
      "semver": ">=6.3.1",
      "vscode-oniguruma": ">=2"
    }
  }
}
