{
  "name": "root",
  "private": true,
  "type": "module",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "packages/*",
    "apps/*",
    "misc/*"
  ],
  "scripts": {
    "build": "turbo run build --skip-infer",
    "dev": "turbo run dev --skip-infer",
    "lint": "turbo run lint --skip-infer",
    "check": "turbo run check --skip-infer",
    "deploy": "turbo run deploy --skip-infer",
    "test": "turbo run test --skip-infer",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules"
  },
  "devDependencies": {
    "@raulmelo/eslint-config": "workspace:./packages/eslint-config",
    "eslint": "8.45.0",
    "husky": "8.0.3",
    "prettier": "3.0.2",
    "rimraf": "5.0.1",
    "scripty": "2.1.1",
    "turbo": "1.10.13",
    "typescript": "5.2.2"
  },
  "scripty": {
    "path": "./scripts"
  },
  "pnpm": {
    "overrides": {
      "semver": ">=6.3.1",
      "vscode-oniguruma": ">=2"
    }
  }
}
