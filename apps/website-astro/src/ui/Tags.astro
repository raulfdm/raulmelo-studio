---
import { type HTMLAttributes } from 'astro/types';

export type Props = HTMLAttributes<`ul`>;

const { class: className, ...props } = Astro.props;
---

<ul
  {...props}
  class:list={[`flex flex-row flex-wrap text-base tag-comp-list`, className]}
>
  <slot />
</ul>

<style is:global>
  .tag-comp-list > li {
    margin-right: 1rem;
  }
</style>
