---
import '@fontsource/fira-code/400.css';
import '@fontsource/fira-code/600.css';

import Layout, { type Props as LayoutProps } from './Layout.astro';

type Props = LayoutProps & {
  contentId: string;
};

const { title, seo, contentId, ...rest } = Astro.props;
---

<Layout title={title} seo={seo} {...rest}>
  {
    contentId.startsWith(`draft`) && (
      <div
        slot="banner"
        class="bg-secondary text-center absolute top-[64px] left-0 right-0 text-gray-900 font-bold text-lg"
      >
        Preview version
      </div>
    )
  }
  <slot />
</Layout>
