{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/ui": [
        "./src/ui"
      ],
      "@/infrastructure": [
        "./src/infrastructure"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
  },
}