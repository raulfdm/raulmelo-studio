{
  "name": "utilities",
  "version": "1.0.0-development",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run typegen\" \"pnpm vite dev\"",
    "build": "pnpm run typegen && vite build",
    "preview": "vite preview",
    "check": "pnpm run typegen && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "typegen": "xstate typegen \"src/**/*.ts?(x)\" && svelte-kit sync"
  },
  "dependencies": {
    "@floating-ui/dom": "1.5.3",
    "@tabler/icons-svelte": "2.34.0",
    "@tailwindcss/forms": "0.5.6",
    "@xstate/svelte": "2.1.0",
    "dayjs": "1.11.10",
    "xstate": "4.38.2"
  },
  "devDependencies": {
    "@raulmelo/eslint-config": "workspace:*",
    "@skeletonlabs/skeleton": "2.0.0",
    "@skeletonlabs/tw-plugin": "0.2.0",
    "@sveltejs/adapter-auto": "2.1.0",
    "@sveltejs/kit": "1.25.0",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "@xstate/cli": "0.5.2",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.0",
    "eslint": "8.49.0",
    "eslint-plugin-svelte": "2.33.1",
    "postcss": "8.4.30",
    "prettier": "3.0.3",
    "svelte": "4.2.0",
    "svelte-check": "3.5.1",
    "svelte-preprocess": "5.0.4",
    "tailwindcss": "3.3.3",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "4.4.9"
  }
}
