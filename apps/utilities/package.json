{
  "name": "utilities",
  "version": "1.0.0-development",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run typegen\" \"bun vite dev\"",
    "build": "bun run typegen && vite build",
    "preview": "vite preview",
    "check": "bun run typegen && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typegen": "xstate typegen \"src/**/*.ts?(x)\" && svelte-kit sync"
  },
  "dependencies": {
    "@floating-ui/dom": "1.5.3",
    "@tabler/icons-svelte": "2.40.0",
    "@tailwindcss/forms": "0.5.7",
    "@xstate/svelte": "2.1.0",
    "dayjs": "1.11.10",
    "xstate": "4.38.3"
  },
  "devDependencies": {
    "@raulmelo/eslint-config": "workspace:*",
    "@skeletonlabs/skeleton": "2.4.0",
    "@skeletonlabs/tw-plugin": "0.2.3",
    "@sveltejs/adapter-auto": "2.1.1",
    "@sveltejs/kit": "1.27.3",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "@xstate/cli": "0.5.7",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "eslint": "8.52.0",
    "eslint-plugin-svelte": "2.34.0",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "svelte": "4.2.2",
    "svelte-check": "3.5.2",
    "svelte-preprocess": "5.0.4",
    "tailwindcss": "3.3.5",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "4.5.0"
  }
}
