{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "bun-types"
    ],
    "verbatimModuleSyntax": true,
    "paths": {
      "@/config": [
        "./src/config/index.ts"
      ],
      "@/utils": [
        "./src/utils/index.ts"
      ],
      "@/domains": [
        "./src/domains/index.ts"
      ],
      "@/scripts/*": [
        "./src/scripts/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "scripts/**/*",
    "package.json",
    "types/**/*"
  ],
  "exclude": [
    "tsconfig.types.json",
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.*",
    "vite.config.ts"
  ]
}