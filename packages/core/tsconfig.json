{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "$config/*": [
        "src/config/*"
      ],
      "$utils/*": [
        "./src/utils/*"
      ],
      "$domains": [
        "./src/domains/index.ts"
      ],
      "$domains/*": [
        "./src/domains/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.*",
    "vite.config.ts"
  ]
}