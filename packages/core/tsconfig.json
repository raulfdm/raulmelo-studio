{
  "extends": "@raulmelo/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "declarationMap": true,
    "paths": {
      "@/config": [
        "src/config/index.ts"
      ],
      "@/utils": [
        "./src/utils/index.ts"
      ],
      "@/domains": [
        "./src/domains/index.ts"
      ],
      "@/scripts/*": [
        "./src/scripts/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.*",
    "vite.config.ts"
  ]
}