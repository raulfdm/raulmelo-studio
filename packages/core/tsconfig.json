{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/global-types": ["src/types.ts"],
      "~/config": ["src/config/index.ts"],
      "~/config/*": ["src/config/*"],
      "~/utils/*": ["./src/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.*",
    "vite.config.ts"
  ]
}
