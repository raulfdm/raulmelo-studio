{
  "extends": "@raulmelo/tsconfig/tsconfig.lib.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/config": [
        "./src/config/index.ts"
      ],
      "@/utils": [
        "./src/utils/index.ts"
      ],
      "@/domains": [
        "./src/domains/index.ts"
      ],
      "@/scripts/*": [
        "./src/scripts/index.ts"
      ]
    }
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.*"
  ]
}