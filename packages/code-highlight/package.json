{
  "name": "@raulmelo/code-highlight",
  "version": "1.0.0-development",
  "description": "Server Side Code Highlighting powered by Starry Night",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./styles": {
      "import": "./styles/starry-theme.css"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist",
    "styles"
  ],
  "type": "module",
  "scripts": {
    "prepare": "turbo --filter code-highlight build --output-logs errors-only",
    "test": "bun test",
    "build": "bun run build:lib && bun run build:types",
    "build:lib": "bun scripts/build.ts",
    "build:types": "tsc -p tsconfig.build.json"
  },
  "peerDependencies": {
    "vscode-oniguruma": ">=1.7.0"
  },
  "dependencies": {
    "@types/hast": "3.0.1",
    "@wooorm/starry-night": "3.0.0",
    "hast-util-to-html": "9.0.0"
  },
  "devDependencies": {
    "@raulmelo/tsconfig": "workspace:*",
    "bun-types": "1.0.6",
    "typescript": "5.2.2"
  }
}
