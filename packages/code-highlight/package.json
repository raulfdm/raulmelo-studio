{
  "name": "@raulmelo/code-highlight",
  "version": "1.0.0",
  "description": "Server Side Code Highlighting powered by Starry Night",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "prepare": "turbo --filter code-highlight build --output-logs errors-only",
    "test": "vitest",
    "dev": "bun scripts/dev.ts",
    "build": "bun run build:lib && bun run build:types",
    "build:lib": "bun scripts/build.ts",
    "build:types": "tsc -p tsconfig.build.json"
  },
  "peerDependencies": {
    "vscode-oniguruma": ">=1.7.0"
  },
  "dependencies": {
    "@types/hast": "2.3.5",
    "@wooorm/starry-night": "2.1.1",
    "hast-util-to-html": "8.0.4"
  },
  "devDependencies": {
    "@tsconfig/bun": "1.0.0",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vitest": "0.34.3"
  }
}
